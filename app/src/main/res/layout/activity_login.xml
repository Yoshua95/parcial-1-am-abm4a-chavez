<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="32dp"
            android:paddingBottom="24dp">

            <!-- LOGO -->
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/hypex_logo"
                android:contentDescription="@string/app_name"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginBottom="12dp" />

            <!-- Bienvenido a HypeX (X roja) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bienvenido a "
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hype"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="#E63946"/>
            </LinearLayout>

            <!-- Crear una cuenta -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear una cuenta"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"/>

            <!-- Descripción -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Introduce tu correo electrónico para registrarte en esta aplicación"
                android:textColor="#6B6B6B"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"/>

            <!-- EMAIL -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="email@domain.com"
                android:inputType="textEmailAddress"
                android:background="@drawable/bg_input_round"
                android:paddingLeft="14dp"
                android:paddingRight="14dp" />

            <!-- PASSWORD -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:background="@drawable/bg_input_round"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_marginTop="10dp" />

            <!-- MENSAJES DINÁMICOS (errores) -->
            <LinearLayout
                android:id="@+id/llDynamicMessages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp" />

            <!-- BOTÓN CONTINUAR (NEGRO) -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Continuar"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_black"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

            <!-- DIVISOR con 'o' -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#E6E6E8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  o  "
                    android:textColor="#6B6B6B"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#E6E6E8" />
            </LinearLayout>

            <!-- BOTÓN GOOGLE -->
            <LinearLayout
                android:id="@+id/btnGoogle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_button_social"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_google"
                    android:contentDescription="Google"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continuar con Google"
                    android:textColor="#111111"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <!-- BOTÓN APPLE -->
            <LinearLayout
                android:id="@+id/btnApple"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_button_social"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_apple"
                    android:contentDescription="Apple"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continuar con Apple"
                    android:textColor="#111111"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <!-- LEGALES -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Al hacer clic en continuar, aceptas nuestros Términos de Servicio y nuestra Política de Privacidad"
                android:textColor="#8D8D8D"
                android:textSize="12sp"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:layout_marginTop="14dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
